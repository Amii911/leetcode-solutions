class Solution:
    def arrangeCoins(self, n: int) -> int:
        lo = 0
        hi = n
        result = 0 

        while lo <= hi:
            mid = (lo + hi) // 2
            total_rows = (mid / 2) * ((mid + 1))
            
            if total_rows > n:
                hi = mid - 1
            else:
                lo = mid + 1
                result = max(mid, result)
        return result
        

